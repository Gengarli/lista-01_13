import java.util.Scanner;

class Main {
  
  public static void main(String[] args) {
     
     Scanner teclado = new Scanner(System.in);
     
     System.out.print("Qual é a sua altura? : ");
     double a = teclado.nextDouble();
     
     double m = 72.7 * a - 58;
    
     double f = 62.1 * a - 44.7;
    
     System.out.println("Caso você seja do sexo masculino seu peso ideal é: " + m + "!");

     System.out.println("Caso você seja do sexo feminino seu peso ideal é: " + f + "!");

     }

}
